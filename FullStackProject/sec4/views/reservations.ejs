<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservations - Elders Quorum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: rgb(6, 40, 0);
            color: white;
            min-height: 100vh;
            padding: 2rem;
        }
        .reservations-container {
            max-width: 1200px;
            margin: 0 auto;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 1rem;
            padding: 2rem;
            backdrop-filter: blur(10px);
        }
        h1 {
            font-family: 'DM Serif Display', serif;
            margin-bottom: 2rem;
        }
        table {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 0.5rem;
            overflow: hidden;
        }
        th {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }
        td {
            color: white;
        }
        .btn-primary {
            background-color: white;
            color: rgb(6, 40, 0);
            border: none;
        }
    </style>
</head>
<body>
    <div class="reservations-container">
        <h1>Reservations for <%= event ? event.eventname : 'Event' %></h1>
        <% if (event) { %>
            <p><strong>Description:</strong> <%= event.eventdescription %></p>
            <p><strong>Type:</strong> <%= event.eventtype %></p>
            <p><strong>Capacity:</strong> <%= event.eventdefaultcapacity %></p>
            
            <h2 class="mt-4">Registrations</h2>
            <% if (registrations && registrations.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Check-in Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% registrations.forEach(reg => { %>
                            <tr>
                                <td><%= reg.participantfirstname %> <%= reg.participantlastname %></td>
                                <td><%= reg.participantemail %></td>
                                <td><%= reg.registrationstatus %></td>
                                <td><%= reg.registrationcheckintime || 'Not checked in' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No registrations yet.</p>
            <% } %>
        <% } else { %>
            <p>Event not found.</p>
        <% } %>
        <a href="/events" class="btn btn-primary mt-3">Back to Events</a>
    </div>
</body>
</html>

